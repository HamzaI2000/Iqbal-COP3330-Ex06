import java.util.scanner*;
import java.lang.*;

public class solution
{
   public static void main(String[] args)
   {
       Scanner in = new Scanner(System.in);   

       int current_year = Calendar.getInstance().get(Calendar.YEAR);

       System.out.print("What is your age currently? ");  
       int age = in.nextInt();
      
       System.out.print("At what age do you want to retire? ");      
       int retire_age = in.nextInt();      
      
       int years_left = retire_age - age;             
       System.out.println("You'll have " + years_left + " years left until you can retire."); 

       int retire_year = current_year + years_left;    
       System.out.println("It is " + current_year +", therefore you can retire in " + retire_year + ".");

   }

}
